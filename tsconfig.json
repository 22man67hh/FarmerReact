{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": true          // <-- add this line to allow JS files
  },
  "include": ["src/**/*"]    // <-- include all files inside src (js/jsx too)
}
